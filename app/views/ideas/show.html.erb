<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<% if @accept_idea == true %>
<p>
  Show this if yes
</p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<%= link_to 'Yes', accept_idea_path(@idea) %> |
<%= link_to 'No', decline_idea_path(@idea) %>
<p>
  <strong>Picture:</strong>
<%= image_tag(@idea.picture_url, :width => 300) if @idea.picture.present? %>
</p>

<p>
  <strong>phone number:</strong>
  <%= @idea.phone_number %>
</p>
<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
